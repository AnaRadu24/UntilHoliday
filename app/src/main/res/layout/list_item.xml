<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_HolidayIcon"
        android:layout_width="150dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/textView_HolidayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_HolidayIcon"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_HolidayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_HolidayIcon"
        android:layout_below="@id/textView_HolidayName"
        android:layout_margin="20dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView_timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_HolidayIcon"
        android:layout_below="@id/textView_HolidayDate"
        android:layout_margin="20dp"
        android:textSize="20dp"/>

</RelativeLayout>
